	<!-- boardDAO 클래스의 bean을 만든다. -->
	<beans:bean id="userDAO" class="com.project.dao.UserDAO"></beans:bean>
	<beans:bean id="boardDAO" class="com.project.dao.BoardDAO"></beans:bean>
	<beans:bean id="commentDAO" class="com.project.dao.CommentDAO"></beans:bean>
	<beans:bean id="heartDAO" class="com.project.dao.HeartDAO"></beans:bean>
</beans:beans>
